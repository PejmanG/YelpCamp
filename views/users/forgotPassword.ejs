<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center mt-5 text-dark">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Forgot Pasword</h5>
                        <form action="/forgot-password" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username/Email Address</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <p class="card-text"><small class="text-muted">Enter Your username or email address to
                                        reset Your Password.</small></p>
                            </div>
                            <button class="btn btn-success btn-block">Send Reset Link</button>
                        </form>
                        <a href="/login">Back to Login Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>