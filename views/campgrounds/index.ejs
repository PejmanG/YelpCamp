<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/loading.css">
<div id="cluster-map"></div>
<div class="container mb-5">
    <h1>All Campgrounds</h1>
    <%# for (let campground of campgrounds){%>
    <% for (let index = 0; index<5; index++){%>
    <div class="card mb-3 text-dark campground-card">
        <div class="row">
            <div class="col-md-4">
                <%if(campgrounds[index].images.length) {%>
                <img class="img-fluid" alt="" src="<%=campgrounds[index].images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campgrounds[index].title %> </h5>

                    <p class="card-text"><%= campgrounds[index].description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campgrounds[index].location%></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%=campgrounds[index]._id%>">View <%=campgrounds[index].title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<div class="loading">
    <div class="ball"></div>
    <div class="ball"></div>
    <div class="ball"></div>
  </div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
<script src="/javascripts/infiniteScroll.js"></script>