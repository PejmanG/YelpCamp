<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center mt-5 text-dark">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Reset Password</h5>
                        <form action="/reset-password?_method=PATCH&token=<%=token%> " method="POST"
                            class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="password">New Password</label>
                                <input class="form-control" type="password" id="password" name="password"
                                    pattern="(?=.*[!@#$%^&*])(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a password that contains atleast (a Capital letter, a Lowercase letter,
                                    a
                                    Number, a Special charachter (Symbols like !@#...) and is atleast 8 characters).
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password-re">Re-enter Your New Password</label>
                                <input class="form-control" type="password" id="password-re" name="passwordRe" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Your passwords must match.
                                </div>
                            </div>
                            <div id="btn-div">
                                <button class="btn btn-success btn-block is-valid">Reset Password</button>
                                <div class="valid-feedback">
                                    Please fill the form to activate the button.
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/passwordValidator.js"></script>