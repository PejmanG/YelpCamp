<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5 text-dark">
    <div class="row mb-5">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="user[username]" required
                                autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                You Must enter a Username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="user[email]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                You must enter a valid Email.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="user[password]"
                                pattern="(?=.*[!@#$%^&*])(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a password that contains atleast (a Capital letter, a Lowercase letter, a
                                Number, a Special charachter (Symbols like !@#...) and is atleast 8 characters).
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password-re">Re-enter Password</label>
                            <input class="form-control" type="password" id="password-re" name="user[passwordRe]"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Your passwords must match.
                            </div>
                        </div>
                        <div id="btn-div">
                            <button class="btn btn-success btn-block is-valid">Register</button>
                            <div class="valid-feedback">
                                Please fill the form to activate the button.
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/passwordValidator.js"></script>